<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatroom_background"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context="com.eidland.auxilium.voice.only.ui.LiveRoomActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="0dp">

        <RelativeLayout
            android:id="@+id/confettiLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/confetti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/img"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/hostimg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:contentDescription="TODO"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/room_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_bold"
                    android:gravity="left"
                    android:lines="1"
                    android:padding="6dp"
                    android:text="Room Name"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/partyicon1"
                    android:scaleType="centerCrop"
                    android:visibility="gone">

                </ImageView>

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/partyicon2"
                    android:scaleType="centerCrop"
                    android:visibility="gone">

                </ImageView>

                <androidx.cardview.widget.CardView
                    android:layout_width="24dp"
                    android:layout_height="24dp"

                    app:cardCornerRadius="18dp">

                    <ImageView
                        android:id="@+id/_userchatroom"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="20dp"
                        android:contentDescription="TODO"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/_leave"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/logout"
                    android:contentDescription="TODO"
                    android:onClick="leave"
                    android:padding="3dp"
                    android:text="Leave"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:tint="#fff" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/leader_board_back"
                android:elevation="10dp"
                android:translationZ="10dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_leader_board"
                    android:paddingStart="10dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:gravity="left"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:elevation="5dp"
                                    android:src="@drawable/ic_cup" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:elevation="5dp"
                                    android:fontFamily="@font/open_sans"
                                    android:padding="3dp"
                                    android:text="Top Speakers"
                                    android:textColor="@color/black"
                                    android:textFontWeight="600"
                                    android:textSize="14dp" />

                            </LinearLayout>


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/top_speaker"
                                android:orientation="horizontal"
                                android:layout_gravity="left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="#D68920"
                            android:padding="20dp"></LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:gravity="left"
                                android:orientation="horizontal">


                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_support" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/open_sans"
                                    android:padding="3dp"
                                    android:text="Top Supporters"
                                    android:textColor="@color/black"
                                    android:textFontWeight="600"
                                    android:textSize="14dp" />

                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/top_contributor"
                                android:orientation="horizontal"
                                android:layout_gravity="left"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="left">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/viewersrecyler"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/showonlineusers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/viewersicon" />

                    <TextView
                        android:id="@+id/online_user_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:padding="8dp"
                        android:text="10 Members"
                        android:textColor="#fff"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/seat_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/animatedlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-55dp"
                android:translationZ="1.0dp"
                android:orientation="vertical"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_top_member"
                    android:gravity="center|left"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/sendername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/open_sans"
                            android:gravity="center|left"
                            android:paddingLeft="5dp"
                            android:paddingBottom="0dp"
                            android:text="Sender"
                            android:textColor="#fff"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/receivername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:paddingLeft="5dp"
                            android:text="contributed"
                            android:textColor="#C551F6"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/imggif"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitCenter" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/live_comment_recyler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="top"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/transparentblackcircle" />

                    <EditText
                        android:id="@+id/comment_box"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@android:color/transparent"
                        android:hint="Tap here to write "
                        android:inputType="textCapSentences"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="15dp"
                        android:textColor="#fff"
                        android:textColorHint="#fff" />
                </RelativeLayout>


                <ImageView
                    android:id="@+id/sndcmnt"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="5dp"
                    android:contentDescription="TODO"
                    android:onClick="onSwitchSpeakerClicked"
                    android:src="@drawable/ic_send_message_button" />

                <ImageView
                    android:id="@id/switch_speaker_id"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="5dp"
                    android:contentDescription="TODO"
                    android:onClick="onSwitchSpeakerClicked"
                    android:src="@drawable/btn_speaker"
                    android:visibility="gone" />

                <ImageView
                    android:id="@id/mute_local_speaker_id"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="5dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_mic_on"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/bottom_action_end_call"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="5dp"
                    android:contentDescription="TODO"
                    android:onClick="onEndCallClicked"
                    android:padding="4dp"
                    android:src="@drawable/ic_leave_mic"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/room_gift"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="5dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_gift_button" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@id/switch_broadcasting_id"
                    android:layout_width="54dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:contentDescription="TODO"
                    android:scaleType="center"
                    android:src="@drawable/btn_request_broadcast"
                    android:visibility="gone"
                    tools:ignore="TooManyViews" />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/giftslayout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentBottom="true"
            android:background="#E6000000"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/open_sans_bold"
                    android:gravity="center"
                    android:text="Gifts encourage the speakers!"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/closegift"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_fi_rr_cross_small_1" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/gift_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:background="#fff"
                    android:entries="@array/entries"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/user_available_coin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:drawableStart="@drawable/ic_fi_rr_coin_5"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="13dp"
                    android:text="00"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/coinrecharge"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:fontFamily="@font/open_sans"
                    android:gravity="center_vertical"
                    android:text="@string/Recharge"
                    android:textColor="#fff"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="98dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:background="@drawable/join_button"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/send_gift"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="Send Gift"
                        android:textAlignment="center"
                        android:textColor="#fff" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#000"></View>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#000"></View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/single_user_box"
            android:layout_width="match_parent"
            android:layout_height="294dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/popupback"
            android:visibility="gone">

            <TextView
                android:id="@+id/removeUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="left"
                android:layout_margin="20dp"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="left"
                android:text="Remove User"
                android:textColor="@color/white"
                android:visibility="gone"/>


            <ImageView
                android:id="@+id/close"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:contentDescription="TODO"
                android:padding="3dp"
                android:src="@drawable/closebrod" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_below="@id/singlename"
                    android:gravity="center">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/lrnt"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/userimgpopup"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_default_image_1" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/lrnname"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@id/lrnt"
                        android:layout_marginTop="10dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtnamepopup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Username"
                            android:textColor="#fff"
                            android:textSize="20sp"

                            android:textStyle="bold" />


                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/singlesendgift"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/join_button"

                    android:gravity="center">


                    <TextView
                        android:id="@+id/singlegiftsend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:gravity="center"
                        android:text="Send Gift"
                        android:textAlignment="center"
                        android:textColor="@color/white">

                    </TextView>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:gravity="center"
                    android:visibility="visible">


                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
